/* pages/goods_ list/index.wxss */

.first_tab {}

.first_tab .godds_item {
    display: flex;
    border-bottom: 1px solid #ccc;
}

.godds_item .goods_img_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-content: center;
}

.godds_item .goods_img_wrap image {
    width: 70%;
}

.godds_item .goods_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goods_info_wrap .goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    /*第几行显示....  就写几*/
    -webkit-line-clamp: 2;
}

.goods_info_wrap .goods_price {
    color: var(--themeColor);
    font-size: 32rpx;
}