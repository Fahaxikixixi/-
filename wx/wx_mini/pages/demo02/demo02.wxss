/* pages/demo02/demo02.wxss */


/*-----------block1-------------*/

.top {
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
}

.top .line {
    width: 32%;
    background: #ccc;
    height: 3rpx;
}

.same {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
}

.top .title {
    width: 26%;
    background: #fff;
    text-align: center;
    font-size: 32rpx;
}


/*-----------block4--------------*/

.block4 {
    background: #fff;
    margin-bottom: 20rpx;
}

.block4 .down {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    /*超过父级盒子宽度换行*/
    padding: 20rpx;
}

.block4 .down view {
    width: 48%;
    border-radius: 6rpx;
    overflow: hidden;
    border: 2rpx solid #ccc;
    margin-top: 20rpx;
}

.down view text {
    font-size: 30rpx;
}

.block4 .down view image {
    width: 100%;
    height: 300rpx;
    display: block;
    border-radius: 6rpx;
    border-top: 2rpx solid #ccc;
}